@model RestaurantApp.Models.Dish

@{
    ViewData["Title"] = "Dodaj danie";
}

<h1 class="mb-4 text-center">🍽️ Dodaj nowe danie</h1>

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card shadow-sm border-0">
            <div class="card-body">

                <form asp-action="Create" method="post" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Nazwa dania</label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Opis</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label fw-bold">Cena (PLN)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label fw-bold">Kategoria</label>
                        <select asp-for="Category" class="form-select"
                                asp-items="Html.GetEnumSelectList<RestaurantApp.Models.MealType>()">
                            <option value="">-- Wybierz kategorię --</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Zdjęcia dania (galeria)</label>
                        <input type="file" name="imageFiles" class="form-control" accept="image/*" multiple />
                        <small class="text-muted">Możesz przesłać wiele zdjęć naraz (JPG, PNG, WebP).</small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">Powrót</a>
                        <button type="submit" class="btn btn-primary px-4">Zapisz</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

