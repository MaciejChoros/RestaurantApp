@model RestaurantApp.Models.Dish

@{
    ViewData["Title"] = "Usuń danie";
}

<style>
    body {
        background: #f2f6fc;
    }

    .delete-card {
        border-radius: 15px;
        transition: .2s ease;
    }

        .delete-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,.15);
        }

    .label-icon {
        margin-right: 6px;
        opacity: .75;
    }
</style>

<h1 class="text-center mb-4 fw-bold text-danger">
    🗑️ Usuń danie
</h1>

<div class="row justify-content-center">
    <div class="col-md-7">

        <div class="card shadow delete-card border-0">

            <div class="card-header text-white"
                 style="background: linear-gradient(90deg, #dc3545, #ff6b6b); border-radius: 15px 15px 0 0;">
                <h4 class="text-center my-2">Czy na pewno chcesz usunąć to danie?</h4>
            </div>

            <div class="card-body p-4">

                @* Podgląd dania *@
                <div class="mb-4 text-center">
                    <h3 class="fw-bold">@Model.Name</h3>
                    <p class="text-muted">@Model.Description</p>

                    @* Zdjęcie dania *@
                    <img src="@(Model.ImagePath ?? "~/images/no-image.jpg")"
                         alt="@Model.Name"
                         class="img-fluid rounded shadow-sm mb-3"
                         style="max-height: 250px; object-fit: cover;">
                </div>

                <hr />

                <dl class="row mb-4">
                    <dt class="col-sm-3 fw-semibold"><i class="bi bi-tag-fill label-icon"></i> Cena:</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-3 fw-semibold"><i class="bi bi-grid-3x3-gap-fill label-icon"></i> Kategoria:</dt>
                    <dd class="col-sm-9">@Model.Category</dd>

                    <dt class="col-sm-3 fw-semibold"><i class="bi bi-clock-history label-icon"></i> Dodano:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt</dd>
                </dl>

                @* Formularz usuwania *@
                <form asp-action="Delete" class="mt-4">

                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">

                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle"></i> Wróć
                        </a>

                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill"></i> Usuń danie
                        </button>

                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
