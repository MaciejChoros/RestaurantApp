@model RestaurantApp.Models.Dish

@{
    ViewData["Title"] = "Szczegóły dania";
}

<div class="container mt-4">
    <h2 class="mb-3">@Model.Name</h2>

    <div class="row">
        <div class="col-md-5">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
            }
            else
            {
                <img src="~/images/no-image.jpg" class="img-fluid rounded shadow-sm" alt="Brak zdjęcia" />
            }
        </div>

        <div class="col-md-7">
            <p class="text-muted">@Model.Description</p>

            <h4 class="text-success fw-bold">@Model.Price.ToString("C")</h4>
            <span class="badge bg-info mb-3">@Model.Category</span>

            <h5>⭐ Średnia ocena:</h5>
            <div class="fs-4 mb-2">
                @{
                    int fullStars = (int)Math.Round(Model.AverageRating);
                    for (int i = 1; i <= 5; i++)
                    {
                        if (i <= fullStars)
                        {
                            <span class="text-warning">★</span>
                        }
                        else
                        {
                            <span class="text-secondary">☆</span>
                        }
                    }
                }
                <span class="ms-2">(@Model.AverageRating.ToString("0.0") / 5)</span>
            </div>

            <hr />

            <h5>Oceń to danie:</h5>
            <form asp-action="Rate" method="post">
                <input type="hidden" name="dishId" value="@Model.Id" />

                <div class="rating mb-3">
                    @for (int i = 5; i >= 1; i--)
                    {
                        <input type="radio" id="star-@i" name="stars" value="@i" />
                        <label for="star-@i" title="@i gwiazdek">★</label>
                    }
                </div>

                <textarea name="comment" class="form-control mb-2" placeholder="Dodaj komentarz (opcjonalnie)"></textarea>

                <button type="submit" class="btn btn-primary">Wyślij ocenę</button>
            </form>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">Edytuj</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Powrót</a>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <div class="mt-3">
        <h5>Komentarze użytkowników:</h5>

        @if (Model.Ratings?.Any() == true)
        {
            foreach (var rating in Model.Ratings.OrderByDescending(r => r.CreatedAt))
            {
                <div class="border rounded p-3 mb-3 bg-light">
                    <div class="text-warning mb-1">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= rating.Stars)
                            {
                                <span>★</span>
                            }
                            else
                            {
                                <span class="text-secondary">☆</span>
                            }
                        }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(rating.Comment))
                    {
                        <p class="mb-1">@rating.Comment</p>
                    }
                    <small class="text-muted">@rating.CreatedAt.ToLocalTime().ToString("g")</small>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Brak ocen dla tego dania.</p>
        }
    </div>
</div>

<style>
    .rating {
        direction: rtl;
        unicode-bidi: bidi-override;
        display: inline-flex;
        gap: 5px;
    }

        .rating input {
            display: none;
        }

        .rating label {
            font-size: 2rem;
            color: #ccc;
            cursor: pointer;
            transition: color 0.2s;
        }

            .rating label:hover,
            .rating label:hover ~ label,
            .rating input:checked ~ label {
                color: #ffc107;
            }
</style>
