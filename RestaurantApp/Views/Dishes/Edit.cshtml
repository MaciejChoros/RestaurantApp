@model RestaurantApp.Models.Dish

@{
    ViewData["Title"] = "Edytuj danie";
}

<div class="container my-5">
    <h1 class="mb-4">Edytuj danie</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm rounded">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagePath" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nazwa dania</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Opis</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Cena (PLN)</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Kategoria</label>
                    <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<RestaurantApp.Models.MealType>()">
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3 text-center">
                        <label class="form-label d-block">Obecne zdjęcie:</label>
                        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded shadow-sm mb-2" style="max-width: 250px;" />
                    </div>
                }

                <div class="mb-4">
                    <label class="form-label">Zmień zdjęcie</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
